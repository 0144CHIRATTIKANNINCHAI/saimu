<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatbot</title>
    <link rel="stylesheet" href="css/chatbot.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <p class="head">Chat Bot</p>
    <div class="chat-container">
        <div class="chatbox">
            <div id="chatbox-messages"></div>
            <form id="chat-form">
                <input class="sendbox" type="text" id="user-message" placeholder="&nbsp;&nbsp;&nbsp;&nbsp;Letâ€™s ask something!" required>
                <button class="send" type="send"><img src="/img/send.png" ></button>
            </form>
        </div>
    </div>

    <script>
        const chatForm = document.getElementById('chat-form');
        const chatMessages = document.getElementById('chatbox-messages');

        chatForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const message = document.getElementById('user-message').value;

            // Display user's message in the chatbox
            chatMessages.innerHTML += `<div class="message user-message">${message}</div>`;

            // Send message to the chatbot backend
            const response = await fetch('/chatbot', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ message })
            });

            const result = await response.json(); // Expecting JSON response
            
            // Show response from the backend (temples and amulets)
            chatMessages.innerHTML += `<div class="message bot-message">${result.response}</div>`;

            // Clear the input field after submission
            document.getElementById('user-message').value = '';
        });
    </script>
</body>
</html>
